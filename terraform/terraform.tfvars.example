# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git (it's in .gitignore)

# DigitalOcean API Token
# Get from: https://cloud.digitalocean.com/account/api/tokens
do_token = "dop_v1_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Region where the droplet will be created
# Available regions: nyc1, nyc3, sfo3, ams3, sgp1, lon1, fra1, tor1, blr1, syd1
do_region = "nyc3"

# Droplet size
# s-1vcpu-1gb     = $6/mo  - 1GB RAM, 1 vCPU, 25GB SSD
# s-1vcpu-2gb     = $12/mo - 2GB RAM, 1 vCPU, 50GB SSD (recommended)
# s-2vcpu-2gb     = $18/mo - 2GB RAM, 2 vCPU, 60GB SSD
# s-2vcpu-4gb     = $24/mo - 4GB RAM, 2 vCPU, 80GB SSD
droplet_size = "s-1vcpu-2gb"

# Droplet name
droplet_name = "cloudlab-swarm"

# SSH keys for accessing the droplet
# Generate with: ssh-keygen -t ed25519 -C "your_email@example.com"
ssh_public_key_path  = "~/.ssh/id_rsa.pub"
ssh_private_key_path = "~/.ssh/id_rsa"

# SSH public key for the deployer user (used by GitHub Actions)
# If not provided, will use the same key as ssh_public_key_path
# Generate a separate key for CI/CD with: ssh-keygen -t ed25519 -f ~/.ssh/cloudlab_deployer -C "cloudlab-deployer"
deployer_ssh_public_key = ""

# Restrict SSH access to specific IPs (optional)
# Empty list = allow from anywhere
# Example: ["1.2.3.4/32", "5.6.7.8/32"]
allowed_ssh_ips = []

# Grafana Cloud configuration (optional)
# If you have a Grafana Cloud account, fill these in
# Otherwise, leave empty and configure later
grafana_cloud_endpoint  = ""  # e.g., "https://your-instance.grafana.net"
grafana_cloud_username  = ""  # e.g., "123456"
grafana_cloud_api_key   = ""  # Your Grafana Cloud API key

# Tags for organizing resources
tags = ["cloudlab", "swarm", "terraform", "production"]
